{
	"name": "splittermond-tickleiste",
	"version": "1.2.0",
	"description": "A Svelte-based application for managing initiative tracking in the pen&paper roleplaying game Splittermond.",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"deploy": "npx gh-pages -d build -t --cname tickleiste.tklic.de",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"author": {
		"name": "Thomas Kliche",
		"email": "thomklic@gmail.com",
		"url": "https://www.tklic.de"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/k3ltis/splittermond-tickleiste.git"
	},
	"homepage": "https://k3ltis.github.io/splittermond-tickleiste",
	"bugs": {
		"url": "https://github.com/k3ltis/splittermond-tickleiste/issues"
	},
	"keywords": [
		"svelte",
		"bun",
		"daisyUI",
		"tailwindcss",
		"splittermond",
		"initiative-tracker",
		"pen-and-paper",
		"rpg"
	],
	"engines": {
		"node": ">=20.18.0",
		"bun": ">=1.1.33"
	},
	"devDependencies": {
		"@rollup/plugin-json": "^6.1.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.12.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"@types/eslint": "^9.6.1",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.22",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"gh-pages": "^6.2.0",
		"globals": "^15.13.0",
		"license-checker": "^25.0.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"svelte": "^5.14.4",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1",
		"vite": "^5.4.11",
		"vite-plugin-svelte-svg": "^2.3.0",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@types/node": "^22.10.2",
		"driver.js": "^1.3.1",
		"lucide-svelte": "^0.454.0",
		"svelte-i18n": "^4.0.1",
		"uuid": "^11.0.3"
	}
}
